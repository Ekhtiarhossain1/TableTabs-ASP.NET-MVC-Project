@model IEnumerable<TableTabsApp.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<h2>My Orders</h2>

<table>
    <thead>
        <tr>
            <th>Image</th>
            <th>Item</th>
            <th>Quantity</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(order.MenuItem.ImagePath))
                    {
                        <img src="@order.MenuItem.ImagePath" alt="@order.MenuItem.Name" style="max-width:100px;max-height:100px;" />
                    }
                </td>
                <td>@order.MenuItem.Name</td>
                <td>@order.Quantity</td>
                <td>@(order.IsReady ? "Ready" : "Not Ready")</td>
            </tr>
        }
    </tbody>
</table>
