@model IEnumerable<TableTabsApp.Models.Order>
@{
    ViewData["Title"] = "Kitchen Order Queue";
}
<h2>Kitchen Order Queue</h2>
<table>
    <thead>
        <tr>
            <th>Table</th>
            <th>Item</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.TableName</td>
                <td>@order.MenuItem.Name</td>
                <td>@order.Quantity</td>
                <td>@(order.IsReady ? "Ready" : "Not Ready")</td>
                <td>
                    @if (!order.IsReady)
                    {
                        <a href="/Kitchen/MarkReady/@order.Id" class="btn btn-primary">Mark as Ready</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Kitchen/Logout" class="btn">Logout</a>
